{{board_header_top}}
<style>
.vichanBanner {
  color: var(--input-background);
  background-color: /*#ffb0aa*/ var(--pinktext-color);
  text-align: center;
  font-size: 16px;
  font-weight: 700;
  margin: 1em 0;
  padding-bottom: 2px;
}
.vichanUnimportant {
  font-size: 10px;
  text-decoration: none;
  color: /*#2b0f51*/ var(--alt-font-color);
}
</style>
<div class="board-header">
  <!-- what a cluster... -->
  <h1 class="board-title">
    {{pretitle}}<a class="no-decoration" {{linkStyle}} href="/{{uri}}/">/{{uri}}/{{title}}</a>{{posttitle}}
  </h1>
  <h4 class="board-description">{{description}}</h4>
  {{board_header_bottom}}
</div>
<div class="vichanBanner" {{vichanBanner}}>
  Posting mode: {{mode}}
  <a class="vichanUnimportant" href="{{uri}}/">[Return]</a>
</div>
<br>
<!-- could bring postform template into here though it maybe better as being compossible -->
{{postform}}
<br>
<!-- need to hidden if js is enable -->
<nav class="stickynav">
  {{sticknav}}
  <a class="nav-item" href="{{url}}#bottom">[&#9660;]</a>
  <a class="nav-item" href="{{url}}#top">[&#9650;]</a>
</nav>
{{boardNav}}
<!-- loop -->
<div class="pages">{{boardNav}}</div>
<!-- end -->
<!-- loop -->
  <span class="pagespan">Page: {{pages}} | </span>
  <span class="boardNav">{{boardNav}}</span>
<!-- end -->
<!-- loop -->
    <!-- page link -->
    <a href="{{uri}}/page/{{pagenum}}">[{{pagenum}}]</a>
<!-- end -->
<!-- loop -->
    <!-- on page -->
    <span class="bold">[{{pagenum}}]</span>
<!-- end -->
<!-- loop -->
    <!-- nav link -->
    [<a class="boardNav{{classes}}" href="{{url}}"{{id}}{{alt}}>{{label}}</a>]
<!-- end -->
<!-- loop -->
    <!-- on nav -->
    [{{label}}]
<!-- end -->
<!-- loop -->
    <!-- prev link -->
    <a href="{{uri}}/page/{{pagenum}}">Prev</a>
<!-- end -->
<!-- loop -->
    Prev
<!-- end -->
<!-- loop -->
    <a href="{{uri}}/page/{{pagenum}}">Next</a>
<!-- end -->
<!-- loop -->
    Next
